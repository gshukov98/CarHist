@page "/cars"
<PageTitle>Cars</PageTitle>

<h1>Cars</h1>

<MatTable Items="@cars" class="mat-elevation-z5" PageSize="9999" ShowPaging="false">
    <MatTableHeader>
        <th style="width:20%">VIN</th>
        <th style="width:35%">Make</th>
        <th style="width:35%">Model</th>
        <th style="width:10%">Actions</th>
    </MatTableHeader>
    <MatTableRow>
        <td>@context.VIN</td>
        <td>@context.Make</td>
        <td>@context.Model</td>
        <td>
            <MatButton Outlined="true" TrailingIcon="edit" Link="@($"/cars/edit/{@context.VIN}")">Edit</MatButton>
            <MatButton Outlined="true" TrailingIcon="delete" Link="@($"/cars/delete/{@context.VIN}")">Delete</MatButton>
        </td>
    </MatTableRow>
</MatTable>
